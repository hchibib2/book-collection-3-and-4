<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Title:", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <!-- Add new fields for author, price, and published date -->
  <div>
    <%= form.label :author, "Author:", style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :price, "Price:", style: "display: block" %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :published_date, "Published Date:", style: "display: block" %>
    <%= form.date_select :published_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
